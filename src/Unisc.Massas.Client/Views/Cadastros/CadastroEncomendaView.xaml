<UserControl x:Class="Unisc.Massas.Client.Views.CadastroEncomendaView"
             xml:lang="pt-BR"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:m="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:interface="clr-namespace:DeBrasil.Massas.Core.Interface;assembly=Unisc.Massas.Core"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="500"
             Background="{DynamicResource MaterialDesignPaper}">

    <md:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Background="{StaticResource TitleBackground}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,10,20,10">
                    <Label Grid.RowSpan="2"
                           Content="{Binding ViewName, Mode=OneTime, FallbackValue='Cadastro de Encomenda', TargetNullValue='Cadastro de Encomenda'}"
                           Foreground="White"
                           Typography.Capitals="AllSmallCaps"
                           Padding="0,0,0,0"
                           FontSize="17pt"
                           FontWeight="Medium"
                           FontFamily="{DynamicResource MaterialDesignFont}" />
                </Grid>
            </Border>

            <StackPanel Grid.Row="1"
                        x:Name="stackpanel"
                        interface:EnterKeyTraversal.IsEnabled="True"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <ComboBox md:HintAssist.Hint="Cliente"
                          HorizontalAlignment="Stretch"
                          Width="700">
                    <ComboBoxItem>Cliente 1</ComboBoxItem>
                    <ComboBoxItem>Cliente 2</ComboBoxItem>
                    <ComboBoxItem>Cliente 3</ComboBoxItem>
                    <ComboBoxItem>Cliente 4</ComboBoxItem>
                </ComboBox>

                <DatePicker md:HintAssist.Hint="Data de Entrega"
                            Width="{StaticResource LargeWidth}" />
                <md:TimePicker md:HintAssist.Hint="Horário máximo para entrega"
                               Width="{StaticResource LargeWidth}" />

                <DockPanel>
                    <ComboBox md:HintAssist.Hint="Status"
                              HorizontalAlignment="Left"
                              Width="{StaticResource RegularWidth}">
                        <ComboBoxItem>Status 1</ComboBoxItem>
                        <ComboBoxItem>Status 2</ComboBoxItem>
                        <ComboBoxItem>Status 3</ComboBoxItem>
                        <ComboBoxItem>Status 4</ComboBoxItem>
                    </ComboBox>

                    <Button DockPanel.Dock="Right"
                            Command="{Binding CadastrarCommand}"
                            Margin="0,0,10,0"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            Width="140"
                            Style="{StaticResource ButtonSuccess}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left"
                                       Text="{StaticResource FaPlus}"
                                       Style="{StaticResource TextBlockIconStyle}" />
                            <TextBlock DockPanel.Dock="Right"
                                       Text="Adicionar Massa"
                                       Style="{StaticResource TextBlockContentStyle}" />
                        </DockPanel>
                    </Button>
                </DockPanel>
            </StackPanel>

            <DataGrid Grid.Row="2"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserDeleteRows="False"
                      BorderBrush="{StaticResource BorderColor}"
                      BorderThickness="0"
                      Margin="8,20"
                      IsReadOnly="True"
                      ItemsSource="{Binding CollectionView}"
                      SelectedIndex="{Binding IndiceSelecionado}"
                      SelectedItem="{Binding EntidadeSelecionada}"
                      SelectionMode="Single"
                      Width="{StaticResource XXLargeWidth}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding EditarCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tipo de Massa"
                                        Binding="{Binding Numero}"
                                        Width="65*" />
                    <DataGridTextColumn Header="Quantidade"
                                        Binding="{Binding Numero}"
                                        Width="35*" />
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Row="3"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            Margin="15">
                    <Button Margin="0,0,15,0"
                            BorderThickness="0"
                            Style="{StaticResource ButtonPrimary}">
                        <Button.CommandParameter>
                            <s:Boolean>True</s:Boolean>
                        </Button.CommandParameter>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left"
                                       Text="{StaticResource FaSave}"
                                       Style="{StaticResource TextBlockIconStyle}" />
                            <TextBlock DockPanel.Dock="Right"
                                       Text="Salvar"
                                       Style="{StaticResource TextBlockContentStyle}" />
                        </DockPanel>
                    </Button>

                    <Button Command="{Binding CancelarCommand}"
                            Margin="0"
                            BorderThickness="0"
                            Style="{StaticResource ButtonDefault}">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left"
                                       Text="{StaticResource FaBan}"
                                       Style="{StaticResource TextBlockIconDarkStyle}" />
                            <TextBlock DockPanel.Dock="Right"
                                       Text="Cancelar"
                                       Style="{StaticResource TextBlockContentDarkStyle}" />
                        </DockPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </md:DialogHost>
</UserControl>
