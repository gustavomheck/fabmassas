<UserControl x:Class="Unisc.Massas.Client.Views.SalvarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border Background="#FAFAFA"
            BorderBrush="Silver"
            BorderThickness="0,1,0,0">
        <Button Command="{Binding SalvarCommand}"
                Margin="15"
                HorizontalAlignment="Left"
                Style="{StaticResource ButtonPrimary}">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           Text="{StaticResource FaSave}"
                           Style="{StaticResource TextBlockIconStyle}" />
                <TextBlock DockPanel.Dock="Right"
                           Text="Salvar"
                           Style="{StaticResource TextBlockContentStyle}" />
            </DockPanel>
        </Button>
    </Border>
</UserControl>
